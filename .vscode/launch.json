{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jekyll: Debug Build",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceFolder}/vendor/bundle/ruby/*/bin/jekyll",
            "args": [
                "build",
                "--trace"
            ],
            "env": {
                "BUNDLE_GEMFILE": "${workspaceFolder}/Gemfile"
            }
        }
    ]
}
